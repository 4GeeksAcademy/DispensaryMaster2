import React from "react";

const StatusIndicator = ({ status }) => {
  const getColor = (status) => {
    switch (status) {
      case "open":
        return "green";
      case "closed":
        return "red";
      default:
        return "gray";
    }
  };

  return (
    <span style={{ color: getColor(status), fontWeight: "bold" }}>
      {status.toUpperCase()}
    </span>
  );
};

export default StatusIndicator;
